{
  "label": "Region labels",
  "source": {
    "type": "geojson",
    "data": "data/ipc_regions_centroid.geojson"
  },
  "type": "symbol",
  "minzoom": 0,
  "paint": {
    "text-color": "#000",
    "text-halo-color": "#fff",
    "text-halo-width": 1.3,
    "text-halo-blur": 1
  },
  "layout": {
    "text-size": 14,
    "text-field": "{region}",
    "text-transform": "uppercase"
  },
  "visible": false
}
